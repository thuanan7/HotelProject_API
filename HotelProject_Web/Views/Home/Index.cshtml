@using Microsoft.AspNetCore.Components
@model IEnumerable<HotelDTO>

<img class="d-block w-100" style="height: 500px;" src="images/slides/slide1.jpg" alt="" />

<hr />
<div class="row" syle="--bs-gutter-x:0">
    @foreach (var hotel in Model)
    {
        <div class="p-4 col-md-12 col-lg-6">
            <div class="row py-2" style="border-radius:20px; border: 1px solid">
                <div class="col-4">
                    <img class="d-block w-100" style="border-radius:20px;" src="@hotel.ImageUrl" alt="First slide" />
                </div>

                <div class="col-8">
                    <p class="card-title text-warning" style="font-size:xx-large">@hotel.Name</p>
                    <p class="card-text">
                        @((MarkupString)hotel.Description)
                    </p>
                </div>

                <div class="col-12">
                    <div class="row">
                        <div class="col-4">
                            <a href="" class="btn btn-success form-control btn-block">Book</a>
                        </div>
                        <div class="col-4 pt-4">
                            <span class="">Max Occupancy: @hotel.Occupancy adults</span><br />
                            <span class="pt-1">Villa Size: @hotel.Size</span><br />
                        </div>
                        <div class="col-4">
                            <span class="text-warning float-end font-weight-bold pt-1" style="font-size:25px;">
                                USD
                                <span style="border-bottom: 1px solid #ff6a00">
                                    @hotel.Price.ToString("c")
                                </span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>