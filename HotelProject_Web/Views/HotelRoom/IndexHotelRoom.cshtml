@model IEnumerable<HotelRoomDTO>

<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Hotel Room List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="HotelRoom" asp-action="CreateHotelRoom" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New Hotel Room</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Hotel Name</th>
                <th>Hotel Room Number</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Hotel.Name</td>
                    <td>@item.RoomNo</td>
                    <td>
                        <a asp-controller="HotelRoom" asp-action="UpdateHotelRoom" asp-route-hotelId="@item.HotelId" asp-route-roomNo="@item.RoomNo" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="HotelRoom" asp-action="DeleteHotelRoom" asp-route-hotelId="@item.HotelId" asp-route-roomNo="@item.RoomNo" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>