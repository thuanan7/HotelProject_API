@model IEnumerable<HotelProject_Web.DTO.HotelDTO>

<br/>
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Hotel List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Hotel" asp-action="CreateHotel" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New Hotel</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Occupancy</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Occupancy</td>
                    <td>@((item.Price).ToString("c"))</td>
                    <td>
                        <a asp-controller="Hotel" asp-action="UpdateHotel" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Hotel" asp-action="DeleteHotel" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>